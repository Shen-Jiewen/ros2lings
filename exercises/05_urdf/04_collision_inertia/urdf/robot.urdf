<!--
  练习: collision_inertia
  模块: 05 - URDF 与机器人建模
  难度: ★★☆☆☆

  学习目标:
    理解 URDF 中 collision（碰撞）和 inertial（惯性）元素的作用，
    掌握如何为 link 添加碰撞几何体和惯性属性以支持物理仿真。

  说明:
    下面的 URDF 定义了一个名为 "physics_bot" 的机器人，包含 2 个 link：
      - base_link（底座）：已有 visual 定义
      - wheel（轮子）：已有 visual 定义

    但目前这两个 link 都缺少 collision 和 inertial 元素，
    这意味着物理仿真引擎（如 Gazebo）无法正确计算碰撞和动力学。

    请根据 TODO 提示，为每个 link 添加碰撞几何体和惯性属性。

  步骤:
    1. 为 base_link 添加 collision 元素（几何体与 visual 相同）
    2. 为 base_link 添加 inertial 元素（mass, origin, inertia）
    3. 为 wheel 添加 collision 元素（几何体与 visual 相同）
    4. 为 wheel 添加 inertial 元素（mass, origin, inertia）
    5. 完成后，删除文件顶部的 "I AM NOT DONE" 注释
-->

<robot name="physics_bot">

  <!-- 底座 link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.0 0.5 0.3"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <!-- TODO 1: 添加 collision 元素，使用与 visual 相同的 box geometry -->
    <!--
      <collision>
        <geometry>
          <box size="..."/>
        </geometry>
      </collision>
    -->

    <!-- TODO 2: 添加 inertial 元素，包含 mass, origin, inertia -->
    <!--
      提示：inertial 元素的结构如下：
      <inertial>
        <mass value="5.0"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.1354" ixy="0" ixz="0"
                 iyy="0.4521" iyz="0" izz="0.5417"/>
      </inertial>
    -->
  </link>

  <!-- 轮子 link -->
  <link name="wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <!-- TODO 3: 添加 collision 元素，使用与 visual 相同的 cylinder geometry -->

    <!-- TODO 4: 添加 inertial 元素 -->
    <!--
      提示：轮子的惯性参数：
        mass value="0.5"
        inertia ixx="0.0005" iyy="0.0005" izz="0.0005"
    -->
  </link>

  <!-- 底座到轮子的连续旋转关节 -->
  <joint name="base_to_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="wheel"/>
    <origin xyz="0.3 0.3 -0.15" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
